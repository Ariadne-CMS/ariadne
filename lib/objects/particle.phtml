class particle extends pobject { // definitie class

	function parse_summary($templ="") {
        if (eregi("<a>",$this->nlsdata->summary)) {
            return eregi_replace("<a>","<a href=\"".$this->store->root.$this->path."\">",$this->nlsdata->summary);
        }
        return $this->nlsdata->summary;
	}

	function _parse_summary($templ="") {
