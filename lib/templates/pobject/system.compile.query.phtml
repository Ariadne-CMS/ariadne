			}
		}
		return $retVal;
	}

	function parse_group_expr(&$result) {
		if ($this->token_ahead["id"]==='(') {
			$this->next_token();
			$retVal=$this->parse_or_expr($result);
			if ($retVal) {
				if ($this->token_ahead["id"]==')') {
					$this->next_token();
				}
			}
		} else {
			$retVal=$this->parse_var_expr($result);
		}
		return $retVal;
	}

	function parse_var_expr(&$result) {
		$this->next_token();
		$result["id"]="var";
		$result["token"]=$this->token["text"];
		return true;
	}
  }

