				}
			}
			if ($needunlocking) {
				$query_string = "unlock tables";
				$this->store_run_query($query_string);
			}
		} else {
			$this->error="$parent does not exist, cannot link.";
			debug("link: ERROR: ".$this->error,"store");
			$result=false;
		}
		return $result;
	}

