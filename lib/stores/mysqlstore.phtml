	public function get_nextid($path, $mask="{5:id}") {
	/**********************************************************************

		'private' function of mysql store. This will return the next
		'autoid' for $path.

	**********************************************************************/

		$path=AddSlashes($path);

		$substr_s = strlen($path);
		if (preg_match("/^(.*)\{([0-9]+:)?id\}(.*)/",$mask,$matches)) { 
			$subid = 0;
			$mask_pre = $matches[1];
			$substr_s += strlen($mask_pre)+1;
			if ( $matches[2] ) {
				$substr_l = intval($matches[2]);
				if (!$substr_l) {
					$substr_l = 5; // default length is 5
				}
			} else {
				$substr_l = false;
			}
			$mask_post= $matches[3];
			$prefix_length = strlen( $path ) + strlen( $mask_pre ) + 1;
			$query_string = "select max( cast( substring( path, $prefix_length ) as unsigned ) ) as id
				from {$this->tbl_prefix}nodes
				where parent = '$path'
				and path regexp '^".$path.$mask_pre."[0-9]+".$mask_post."'";

			$result = $this->store_run_query($query_string);
			if ($result) {
				$row = mysql_fetch_array($result);
				$subid = intval( $row['id'] );
			}
			$subid=$subid+1;
			if ( $substr_l !== false ) {
				$subid = sprintf("%0".$substr_l."d", $subid);
			}
		}
		return $subid;
	}


