									"path" => $this->path));
				}	
				foreach($groups as $group => $value) {
					if(strval(intval($group))!=$group) {
						$this->get($group, "system.set.user.phtml", Array(
									"action" => "add",
									"path" => $this->path));
					}
				}

				if ($ARCurrent->session->get("ARLogin") == $this->data->login
					&& $pass1) {
					$ARCurrent->session->put("ARLogin", "");
					ldSetCredentials($this->data->login, $pass1);
