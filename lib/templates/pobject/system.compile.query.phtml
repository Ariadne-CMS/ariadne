  // tokens: (, ), and, or,
  class scanner {
	function __construct($text) {
		$this->data=$text;
	}

	function gettoken() {
		$re='/^[[:space:]]*("[^"]*"|[()]|and|or)/i';
		if (!$this->data) {
			$result["id"]=false;
		} else
		if (preg_match($re, $this->data, $matches)) {
			if ($matches[1][0]==='"') {
				$result["id"]="var";
				$result["text"]=substr($matches[1], 1, -1);
			} else {
				$result["id"]=$matches[1];
			}
			$this->data=substr($this->data, strlen($matches[0]));
		} else {
			$re='/^[[:space:]]*([^[:space:]()]+)/i';
			if (preg_match($re, $this->data, $matches)) {
				$result["id"]="var";
				$result["text"]=$matches[1];
				$this->data=substr($this->data, strlen($matches[0]));
			}
		}
		return $result;
	}
  }

