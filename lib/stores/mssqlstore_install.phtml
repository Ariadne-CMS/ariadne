)";

		$queries[7]["msg"]="creating seq_id table.";
		$queries[7]["query_string"]="
CREATE TABLE ".$this->tbl_prefix."seq_id (
	[path] varchar(127) DEFAULT '' NOT NULL PRIMARY KEY,
	[next_id] numeric(11) DEFAULT '0' NOT NULL
)";
		$queries[8]["msg"]="creating types table.";
		$queries[8]["query_string"]="
CREATE TABLE ".$this->tbl_prefix."types (
