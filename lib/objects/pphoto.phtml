	function crop($width, $height, $x=0, $y=0) {
		global $ARConfig;

		$this->set_context("mogrify");

		$ARConfig->photoStack[$this->id][]=" -crop ".((int)$width)."x".((int)$height)."+".((int)$x)."+".((int)$y)."! +repage";
