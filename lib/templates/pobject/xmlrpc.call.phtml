		require_once($this->store->get_config("code")."modules/mod_xmlrpc.php");

		$result = XMLRPC::call( $xmlrpcUrl, $xmlrpcFunction, $xmlrpcArgs );

		if( gettype($result) == "string" ) {
			$arResult = false;
			$this->error = $result;
		} else {
			$arResult = $result;
		}
	}

	

