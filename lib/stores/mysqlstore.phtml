	function make_path($curr_dir, $path) {
	/**********************************************************************
 
		This function creates an absolute path from the given starting path
	($curr_dir) and a relative (or absolute) path ($path). If $path starts
	with a '/' $curr_dir is ignored. 
	$path must be a string of substrings seperated by '/'. each of these 
	substrings may consist of charachters and/or numbers. If a substring
	is "..", it and the previuos substring will be removed. If a substring
	is "." or "", it is removed. All other substrings are then concatenated
	with a '/' between them and at the start and the end. This string is 
	then returned.

	**********************************************************************/

		debug("Store::make_path($curr_dir, $path)","all");		
		$this->error="";
		if (substr($path,0,1)=="/") {
			$result="/";
			$path=substr($path, 1);
		} else {
			$result=$curr_dir;
		}
		if (substr($path,-1)=="/") {
			$path=substr($path, 0, -1);
		}
		if ($path) {
			$splitpath=split("/", $path);

			while (list($key, $pathticle)=each($splitpath)) {
				switch($pathticle) {
					case ".." : $result=substr($result, 0, strrpos(substr($result,0,-1), "/")+1);
								break;
					case "." : break;
					case ""	 : break;
					default	 : $result=$result.$pathticle."/";
				}
			}
		}
		debug("Store::make_path: end ($result)","all");		
		return $result;
	}

	function save_properties($properties, $id) {
	/********************************************************************

		'private' function of mysql.phtml. It updates all property tables
		defined in $properties and sets the values to the values in
		$properties.

	********************************************************************/

		debug("Store::save_properties([properties], $id)","all");
		if ($properties && (is_array($properties)) && (is_int($id))) {
			while (list($property, $property_set)=each($properties)) {
				$this->del_property($id, $property);
				if (is_array($property_set)) {
					while (list($key, $values)=each($property_set)) {
						$this->add_property($id, $property, $values);
					}
				}
			}
		}
		debug("Store::save_properties: end","all");
	}


	function load_properties($object) {
		debug("Store::load_properties($object)","all");
		if ($object) {
			$query_string="select name from properties";
			$query=@mysql_db_query($this->database,$query_string,$this->connect_id);
			while ($prop=@mysql_fetch_array($query)) {
				if ($value=$this->load_property($object,$prop["name"])) {
					$result[$prop["name"]]=$value;
				}
			}
		}
		debug("Store::load_properties: end","all");
		return $result;
	}

	function load_property($object, $property) {
		debug("Store::load_property($object, $property)","all");
		if ($object) {
			$query_string="select * from prop_".AddSlashes($property)." where object=$object";
			$query=@mysql_db_query($this->database,$query_string,$this->connect_id);
			$currProp=0;
			while ($prop=@mysql_fetch_array($query)) {
				reset($prop);
				while (is_array($prop) && (list($name,$val)=each($prop)) ) {
					if (($name!="object")&&(!is_int($name))) {
						if (is_string($val)) {
							$result[$currProp][substr($name,3)]="'".AddSlashes($val)."'";
						} else {
							$result[$currProp][substr($name,3)]=$val;
						}
					}
				}
				$currProp++;
			}
		}
		debug("Store::load_property: end","all");
		return $result;
	}

	function add_property($object, $property, $values) {
		debug("Store::add_property($object, $property, [values])","all");
		if ($object) {
			while (list($name, $value)=each($values)) {
				if ($value!="") {
					$query_names.="AR_".AddSlashes($name).", ";
					$query_values.="$value, ";
				}
			}
			$query_string="insert into prop_".AddSlashes($property)." ( ".
										$query_names."object ) values ( ".$query_values."$object )";
			mysql_db_query($this->database,$query_string, $this->connect_id);
			$result=mysql_affected_rows($this->connect_id);
		}
		debug("Store::add_property: end","all");
		return $result;
	}

	function del_property($object, $property="", $values="") {
		debug("Store::del_property($object, $property, [values])","all");
		if (intval($object)) {
			if (!$property) { // remove all properties for $object
				$query_string="select name from properties";
				$temp=mysql_db_query($this->database,$query_string, $this->connect_id);
				while ($row=mysql_fetch_array($temp)) {
					$query_string="delete from prop_".$row["name"]." where object=$object";
					mysql_db_query($this->database,$query_string, $this->connect_id);
					$result+=mysql_affected_rows($this->connect_id);
				}
			} else {
				$query_string="delete from prop_".AddSlashes($property)." where ";
				if (is_array($values)) {
					while (list($name, $value)=each($values)) {
						$query_string.="AR_".AddSlashes($name)."=$value and ";
					}
				}
				$query_string.="object=$object";
				mysql_db_query($this->database,$query_string, $this->connect_id);
				$result=mysql_affected_rows($this->connect_id);
			}
		}
		debug("Store::del_property: end","all");
		return $result;
	}

	function nextid($path) {
	/**********************************************************************

		'private' function of mysql store. Used by link and save.
		This function calculates and returns the next unused id (number) for 
	the given path. 

	**********************************************************************/

		$path=AddSlashes($path);
		$query_string="lock tables seq_id write";
		if ($temp=mysql_db_query($this->database,$query_string, $this->connect_id)) {
			$query_string="select next_id from seq_id where path='$path'";
			if (($temp=mysql_db_query($this->database,$query_string, $this->connect_id)) && (mysql_affected_rows($this->connect_id)>0)) {
				$row=mysql_fetch_array($temp);
				$id=intval($row["next_id"]);
			} else {
				$id=1;
				$query_string="insert into seq_id values ('$path', 1 )";
				mysql_db_query($this->database,$query_string, $this->connect_id);
			}
			$query_string="update seq_id set next_id=".($id+1)." where path='$path'";		
			mysql_db_query($this->database,$query_string, $this->connect_id);
			$query_string="unlock tables";
			mysql_db_query($this->database,$query_string, $this->connect_id);
		} else {
			eror("no lock.");
			$this->close();
			exit;
		}
		return $id;
	}

