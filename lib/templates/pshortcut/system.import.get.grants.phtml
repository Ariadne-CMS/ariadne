  if ($this->options["grants"]) {
	while (list($type, $type_val)=@each($this->data->grants)) {
		while (list($user,$grants)=@each($type_val)) {
			while (list($grant,)=@each($grants)) {
				$ARCurrent->grants_list[$type][$user][$this->path][$grant]=1;
			}
		}
	}
  }
