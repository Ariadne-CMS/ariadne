	function mysqlstore($path, $config) {
	/**********************************************************************************
		
	 This is the constructor routine for the store object. It takes some configuration 
	 information as arguments and sets up the database connection.

	 $path is the root path of the running script under the document root of				
		the webserver.
	 $config contains some database configuration values: "host", "user",
		"password", "database" and the location of the class files for all the used
		types.

	 **********************************************************************************/
		debug("Store::mysqlstore($path, [array])","store");
//		dl("mysql.so");
		$this->error="";
		if ($this->connect_id=mysql_connect($config["host"], $config["user"], $config["password"])) {

//		The mysql_select_db isn't necessary anymore due a bug-workaround
//		see note at $this->database

//			if (!$this->result=mysql_select_db($config["database"],$this->connect_id)) {
//				mysql_close($this->connect_id);
//				$this->connect_id=0;
//			}

		}
		$this->root=$path;
		$this->code=$config["code"];
		$this->files=$config["files"];
		// necessary to avoid the 'mysql_select_db' bug, it will select
		// a database for all open connect_id's
		// so we have to supply the database name where an query has to run
		$this->database=$config["database"];
		/* Instantiate module locking */
		include_once($this->code."modules/mod_lock/mysql.phtml");
		$this->mod_lock=new mysqllock($config["host"],$config["user"],$config["password"],$config["database"]);
		$this->mod_lock->lock_duration=$config["lock_duration"];
		$config["password"]="";
		debug("Store::mysqlstore: end","all");
	}

	function call($template, $args, $objects) {
	/**********************************************************************************
	
	 This function takes a list of objects, the function to be called in each of those
	 objects and the arguments of that function as arguments. The list of objects is of
	 unspecified type and may be different in other implementations of the store 
	 interface.

	 The function will retrieve and instantiate each object in the object list and call
	 the objects call with $function and $args.

	 store->call is aware of the possibility of objects being called as a substore, 
	 meaning: If a requested object is not found in this store, it might be in a
	 different store which is linked into this one via a substore. Each object can in
	 principle double as a substore, as long as it declares the object->is_store 
	 variable as TRUE. So if the requested object is not found, the search functions 
	 (get, ls and find) will return the object with the longest matching path. It is up
	 to store->call to check wether this object is the one referenced and if not, 
	 wether it is a substore.
	 **********************************************************************************/ 

		debug("Store::call($template, $args, [list])","store");
		$this->error="";
		$this->count=@mysql_num_rows($objects["list"]);
		while ($row=@mysql_fetch_array($objects["list"])) {
			$object=$this->newobject($row["path"], $row["parent"], $row["type"], $row["object"], $row["id"], $row["lastchanged"], $row["vtype"]);
			$result[]=$object->call($template, $args);
		}

		if (!$this->count) {
			debug("Store::call: end: no objects found whatsoever.","all");
		} else {
			debug("Store::call: end: $this->count objects found","all");
		}
		$this->total+=$this->count;
		return $result;
	}

	function newobject($path, $parent, $type, $data, $id=0, $lastchanged=0, $vtype="") {
		debug("Store::newobject($path, $parent, $type, [data], $id, $lastchanged, $vtype)","all");
		include_once($this->code."objects/".$type.".phtml");
		$object=new $type;
		$object->init($this, $path, $data);
		$object->type=$type;
		$object->parent=$parent;
		$object->id=$id; 
		$object->lastchanged=$lastchanged;
		return $object;
	}

	function get($path) {
	/**********************************************************************************

	 This function takes as argument a path to an object in the store and will retrieve
	 all the necessary data and return this in the objectlist type needed for 
	 store->call(). If the requested path does not exist, it will retrieve the object
	 with the longest matching path.

	 $path should always start and end with a '/'.

	 **********************************************************************************/

		debug("Store::get($path)","store");
		$this->error="";
		$result["method"]="get";
		$result["path"]=$path;
		$epath=AddSlashes($path);
		$query_string="select nodes.path, nodes.parent, objects.id, objects.type, objects.object, objects.lastchanged from objects, nodes where objects.id=nodes.object and nodes.path='$epath'";
		$result["list"]=mysql_db_query($this->database,$query_string, $this->connect_id);
		debug("Store::get: end","all");
		return $result;
	}

	function ls($path) {
	/**********************************************************************************

	 This function takes as argument a path to an object in the store and will retrieve
	 all the objects and their data which have this object as their parent. It will 
	 then return this in the objectlist type needed for store->call(). If the requested
	 path does not exist, it will retrieve the object with the longest matching path.

	 $path should always start and end with a '/'.

	 **********************************************************************************/

		debug("Store::ls($path)","store");
		$this->error="";
		$epath=AddSlashes($path);
		$query_string="select distinct(nodes.path), nodes.parent, objects.id, objects.type, objects.object, objects.lastchanged from objects, nodes where objects.id=nodes.object and nodes.parent='$epath' order by nodes.path";
		$result["method"]="ls";
		$result["path"]=$path;
		$result["list"]=mysql_db_query($this->database,$query_string, $this->connect_id);
		debug("Store::ls: query=$query_string","all");
		debug("Store::ls: end","all");
		return $result;
	}

	function parents($path) {
	/**********************************************************************************

	 This function takes as argument a path to an object in the store. It will return 
	 all objects with a path which is a substring of the given path. The resulsts are 
	 ordered by path (length), shortest paths first.
	 In effect all parents of an object in the tree are called, in order, starting at 
	 the root.

	 $path should always start and end with a '/'.

	 **********************************************************************************/

		debug("Store::parents($path)","store");
		$this->error="";
		$epath=AddSlashes($path);
		$query_string="select distinct(nodes.path), nodes.parent, objects.id, objects.type, objects.object, objects.lastchanged from objects, nodes where objects.id=nodes.object and nodes.path=substring('$epath',1,length(path)) order by path";
		$result["method"]="parents";
		$result["path"]=$path;
		$result["list"]=mysql_db_query($this->database,$query_string, $this->connect_id);
		debug("Store::parents: end","all");
		return $result;
	}

	function find($path, $criteria, $limit=100, $offset=0) {
	/**********************************************************************************

	 This function takes as arguments a path to an object in the store and some search
	 criteria. It will search for all matching objects under the given path. If the
	 given path is not in this store but in a substore it will not automatically search
	 that substore. 

	 $criteria is of the form 

	 $criteria ::= ({ $property_name => ({ $valuename => ({ $compare_function, $value }) }) }) 

	 e.g.: $criteria["status"]["value"][">"]="'published'";

	 $path should always start and end with a '/'.

	 **********************************************************************************/

		debug("Store::find($path, [array], $limit, $offset)","store");
		$this->error="";
		$count=0;
		$result["method"]="find";
		$result["path"]=$path;
		$result["criteria"]=$criteria;
		$epath=AddSlashes($path);
		while (list($property, $values)=@each($criteria)) {
			$eproperty=AddSlashes($property);
			if ($property!="object") {
				$from.=", prop_$eproperty";
				$where.=" and (";
			}
			while (list($valuename, $compare)=each($values)) {
				while (list($function, $value)=each($compare)) {
					$ecompare=AddSlashes($function);
					$evaluename=AddSlashes($valuename);
					if ($value=="") { 
						// empty strings as value generate strange results in SQL land
						$value=0;
					}
					switch($property) {
						case "object" :
							switch($valuename) {
								case ("type") : 
									$where.=" and objects.type $ecompare $value ";
								 	break;
								case ("implements") : 
									$types=", types";
									$where.=" and ( types.implements $ecompare $value and objects.vtype=types.type ) ";
									break;
								case ("parent") :
									$where.=" and nodes.parent $ecompare $value ";
									break;
								case ("lastchanged") :
									$where.=" and objects.lastchanged $ecompare $value ";
									break;
							}
							break;
						default :
							$where.="prop_$eproperty.AR_$evaluename $ecompare $value and "; 
					}
				}
			}
			if ($property!="object") {
				$where.=" prop_$eproperty.object=objects.id)	";
			}
		}
		$query_string="select distinct(nodes.path), nodes.parent, objects.id, objects.type, objects.object, objects.lastchanged from nodes, objects $from $types where objects.id=nodes.object and nodes.path like '$epath%' and ( (".substr($where,4).") ) order by nodes.path limit $offset,$limit";
		debug("Store::find: query=$query_string","all");
		$result["list"]=mysql_db_query($this->database,$query_string, $this->connect_id);


		debug("Store::find: end","all");
		return $result;
	}

