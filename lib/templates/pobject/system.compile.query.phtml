		if (!$this->token || $this->token->id!==0) {
			$this->token=$this->token_ahead;
			if (!$this->token_ahead || $this->token_ahead->id!==0) {
				$this->token_ahead=$this->scanner->gettoken();
			}
		}
		return $this->token->id;
	}

