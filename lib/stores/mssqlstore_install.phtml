		$queries[5]["msg"]="creating node_priorities index.";
		$queries[5]["query_string"]="CREATE INDEX ".$this->tbl_prefix."nodes_priority ON ".$this->tbl_prefix."nodes (priority);";
		$queries[6]["msg"]="creating properties table.";
		$queries[6]["query_string"]="
CREATE TABLE ".$this->tbl_prefix."properties (
