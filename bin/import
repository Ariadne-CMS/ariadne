#!/usr/bin/php4 -q
<?php
	$ariadne="../lib";
	require($ariadne."/configs/ariadne.phtml");
	require($ariadne."/configs/store.phtml");
	require($ariadne."/stores/mysqlstore.phtml");

	if (($import_path=$argv[2]) && ($ax_file=$argv[1])) {
		$ARImportNoGrants=$argv[3];

		if (!file_exists($ax_file)) { 
			$error="err:filedoesntexist";
		} else {
			$store=new mysqlstore($root,$store_config);
			include($ariadne."/includes/import.phtml");
			$store->close();
		}
		if ($error) {
			echo $error."\n";
		}
	} else {
		echo "USAGE: import [ax_file] [import_path] [grants: [Y/n]]\n";
	}
?>