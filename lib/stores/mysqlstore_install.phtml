) ENGINE " . $this->engine ;

		$queries[1]["msg"]="creating objects table.";
		$queries[1]["query_string"]="
CREATE TABLE ".$this->tbl_prefix."objects (
	id int(11)  NOT NULL auto_increment,
	type varchar(32) DEFAULT '' NOT NULL,
	object mediumtext,
